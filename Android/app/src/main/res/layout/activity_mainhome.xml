<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".Mainhome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <!-- Use a single vertical LinearLayout for all ImageView containers -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="200dp">

            <!-- ImageView 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/adminlion" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" “A truly strong person does not need the approval of others any more than a lion needs the approval of sheep.”"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:textSize="10dp"
                    />
            </LinearLayout>

            <!-- ImageView 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/hynanew" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" There's always the hyena of morality at the garden gate, and the real wolf at the end of the street."
                    android:textColor="@color/white"
                    android:layout_gravity="left"
                    android:textSize="10dp"
                    />
            </LinearLayout>

            <!-- ImageView 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/cheettah" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" Pronghorn antelope were the second fastest mammals on earth—only an African cheetah could outrun them."
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:textSize="10dp"
                    />
            </LinearLayout>

            <!-- ImageView 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/elephants" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" “Elephants love reunions. They recognize one another after years and years of separation and greet each other with wild, boisterous joy. There's bellowing and trumpeting, ear flapping and rubbing. Trunks entwine.”"
                    android:textColor="@color/white"
                    android:layout_gravity="left"
                    android:textSize="10dp"
                    />

            </LinearLayout>

            <!-- ImageView 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/tigernew" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" A tiger does not shout its tigritude, it acts."
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:textSize="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:background="#CA2626"
        android:layout_gravity="center"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/guard"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START NOW.."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"

            />

    </LinearLayout>

</LinearLayout>
